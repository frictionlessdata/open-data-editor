{
    "include": [
        "client/**/*"
    ],
    "compilerOptions": {
        "strict": true,
        "noEmit": true,
        "target": "ES2022",
        "module": "commonjs",
        "lib": [
            "ESNext",
            "ESNext.Array",
            "DOM",
            "dom.iterable"
        ],
        "declaration": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": false,
        "experimentalDecorators": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "skipLibCheck": true,
        "jsx": "react-jsx",
        "paths": {
            "@client/*": [
                "./client/*"
            ]
        }
    }
}
